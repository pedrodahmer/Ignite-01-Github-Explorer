{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],                                   
    "allowJs": true,                             
    "jsx": "react-jsx",                           
    "noEmit": true,                              
    "strict": true,                                 
    "moduleResolution": "node", 
    "resolveJsonModule": false,
    "isolatedModules": true,                 
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"]
}
